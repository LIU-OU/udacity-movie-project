<view wx:if="{{!userInfo}}">
    <view class="unlogin-card">
        <view class="unlogin-head"></view>
        <view class="unlogin-info">
            <view class="unlogin-text">未登录</view>
            <view class="unlogin-tips">点击微信登陆后获取个人收藏信息</view>
        </view>
    </view>
    <button wx:if="{{locationAuthType==0}}" class="unlogin-btn" open-type="getUserInfo" bindgetuserinfo="onTapLogin">微信登陆</button>
    <button wx:if="{{locationAuthType==1}}" class="unlogin-btn" open-type="openSetting" bindopensetting="onTapLogin">授权登陆</button>
</view>
<view wx:else>
    <view class="col-caption">
        <view class="cap-text">收藏的影评</view>
        <image src="../../images/down-arrow.png" class="cap-image" mode="widthFix"></image>
    </view>

    <view class="noColl-tip" wx:if="{{!comCollection.length}}">
        <image class="tip-image" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
        <view class="tip-text">你当前没有任何收藏...</view>
    </view>
</view>