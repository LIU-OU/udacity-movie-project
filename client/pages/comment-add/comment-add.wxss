.addCom-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    width: 84%;
    height: 80%;
    background-color: white;
    margin: 100rpx auto 0rpx;
    border: 2rpx solid rgba(218, 212, 212, 0.658);
}
.movie-picture {
    width: 200rpx;
    margin-top: -60rpx;
}
.movie-title {
    padding: 24rpx 0rpx;
    font-size: 36rpx;
    font-weight: bold;

}

.done-button {
    text-align: center;
    font-size: 32rpx;
    padding: 24rpx 0;
    background-color:rgb(14, 223, 136);
    position: fixed;
    bottom: 0;
    width: 100%;
    color: white;
}

.comment-audio {
    border: 1rpx solid rgb(179, 176, 176);
    padding: 18rpx 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    background-color: rgb(210, 216, 213);
    padding: 0rpx;
    
}
.comment-text {
    font-size: 28rpx;
    text-align: center;
    margin-top: 20rpx;
}

.record-icon {
    width: 44rpx;
}
.record-text {
    font-size: 33rpx;
}


.rec-begin {
    background-color:rgb(14, 223, 136);
    color: white;
    
}

/*录音预览按钮*/
.preview-audio {
    width: 230rpx;
    padding: 13rpx 0rpx;
    background-color: rgb(14, 223, 136);
    border-radius: 11rpx;
    margin: 14rpx 7rpx;
    text-align: center;
    align-self: flex-start;
    color: white;
}
.onPlay {
    background-color: rgba(15, 161, 101, 0.753);
}