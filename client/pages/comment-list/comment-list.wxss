.noComment-tips {
    display: flex;
    width: 86%;
    height: 700rpx;
    background-color:white;
    justify-content: space-between;
    align-items: center;
    flex-direction: column;
    margin: auto;
    margin-top: 200rpx;
    padding: 38rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
    border: 1rpx solid rgba(194, 191, 191, 0.356);
    

}
.comTip-pic {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border: 2rpx solid black;
}
.comTip-text {
    font-size: 33rpx;
    flex: 1;
    padding-top: 47rpx;
}
.entra-comment {
    background-color: rgb(50, 245, 164);
    width:100%;
    padding: 13rpx;
    text-align: center;
    color: white;
    font-size: 37rpx;
    font-weight: bold;
}