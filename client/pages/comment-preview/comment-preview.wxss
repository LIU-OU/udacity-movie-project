.comPreview-panel {
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    width: 84%;
    height: 80%;
    background-color: white;
    margin: 100rpx auto 0rpx;
    border: 2rpx solid rgba(218, 212, 212, 0.658);
    box-sizing: border-box;
    padding: 0rpx 60rpx;
}
.movie-picture {
    width: 200rpx;
    margin-top: -60rpx;
}
.movie-title {
    padding: 24rpx 0rpx;
    font-size: 36rpx;
    font-weight: bold;
}

/*添加评论后的预览评论页面*/
.comContent {
    width: 100%;
    box-sizing: border-box;
    padding: 33rpx 29rpx;
    flex: 1;
}
.comment-user {
    width: 100%;
    display: flex;
    justify-content: flex-start;
}
.userAvatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 60rpx;
}
.comment-text {
    display: flex;
    justify-content: flex-start;
    padding-top: 33rpx;
    height: 200rpx;
}
.quaMark {
    font-size: 47rpx;
    font-weight: bold;
    padding: 21rpx;

}
.content-text {
    font-size: 27rpx;
}

.preview-audio {
    width: 230rpx;
    padding: 13rpx 0rpx;
    background-color: rgb(14, 223, 136);
    border-radius: 11rpx;
    margin: 14rpx 7rpx;
    text-align: center;
    align-self: flex-start;
    color: white;
}

/*录音预览按钮*/


.onPlay {
    background-color: rgba(15, 161, 101, 0.753);
}

/* 重新编辑 和 发布影评按钮*/
.comStatus-turn {
    display: flex;
    justify-content: space-between;
    font-size: 33rpx;
    width: 100%;
    padding-bottom: 23rpx;
}
.reform-btn, .release-btn {
    display: flex;
    border: 1px solid rgba(185, 181, 181, 0.39);
    padding: 9rpx 21rpx;
    align-items: center;
}
.reform-image, .release-image {
    width: 47rpx;
    margin-right: 11rpx;
}