/* pages/hot-list/hot-list.wxss */
page {
    height: 100%;
   
}
.scroll-view {
    height: 100%;
    padding:40rpx 50rpx 100rpx;
    box-sizing: border-box;
   
    

}
.movie-card {
    background-color: white;
    height: 30%;
    box-sizing: border-box;
    border: 1rpx solid rgba(128, 128, 128, 0.103);
    margin-bottom: 40rpx;
    display: flex;
    justify-content: flex-start;
   

}

.card-image {
    width:200rpx;
    height: 100%;
}

.card-text {
    padding: 10rpx 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}
.movie-title {
    font-size: 32rpx;
    font-weight: bold;
    text-align: center;
}
.movie-category {
    font-size: 26rpx;
    text-align: center;
}